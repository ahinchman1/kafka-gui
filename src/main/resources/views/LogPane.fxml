<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           onKeyPressed="#handleKeyPress">
  <ListView fx:id="messageList" styleClass="messages"/>
  <TextField fx:id="searchField" styleClass="search-field" StackPane.alignment="TOP_CENTER" onKeyReleased="#search"
             visible="false">
    <StackPane.margin>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </StackPane.margin>
  </TextField>
</StackPane>
