<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import ui.controllers.TopicRowFactory?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
         prefWidth="700.0" rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.LogController">
  <Tab text="Listeners">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="625.0" prefWidth="668.0">
      <Label layoutX="14.0" layoutY="14.0" text="Topic"/>
      <TextField fx:id="topic" layoutX="14.0" layoutY="35.0" prefHeight="27.0" prefWidth="476.0"
                 promptText=".*search.*"/>
      <Label layoutX="517.0" layoutY="14.0" text="Is Pattern"/>
      <CheckBox fx:id="isPattern" alignment="CENTER" layoutX="538.0" layoutY="40.0" mnemonicParsing="false"
                prefHeight="18.0" prefWidth="13.0"/>
      <Button layoutX="608.0" layoutY="35.0" mnemonicParsing="false" onMouseClicked="#addTopic" text="Add"/>
      <ListView fx:id="topicList" items="${controller.topics}" layoutX="17.0" layoutY="71.0" prefHeight="480.0" prefWidth="632.0">
        <cellFactory>
          <TopicRowFactory />
        </cellFactory>
      </ListView>
      <CheckBox fx:id="fake" alignment="CENTER" contentDisplay="TOP" layoutX="505.0" layoutY="559.0"
                mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" onAction="#toggleFakeData"
                text="Generate fake data"/>
      <CheckBox fx:id="collect" layoutX="334.0" layoutY="559.0" mnemonicParsing="false"
                onAction="#toggleCollectData" text="Collect messages"/>
    </AnchorPane>
  </Tab>
  <Tab text="Log">
    <ListView fx:id="messages" prefHeight="200.0" prefWidth="200.0"/>
  </Tab>
</TabPane>
