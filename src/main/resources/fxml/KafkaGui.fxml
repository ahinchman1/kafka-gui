<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
         prefWidth="700.0" rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="ui.controllers.ConsumerController">
  <Tab text="Listeners">
    <GridPane>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="10000.0" minWidth="10.0" prefWidth="580.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="80.0" minWidth="80.0" prefWidth="80.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="10000.0" minHeight="10.0" prefHeight="400.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER"/>
      </rowConstraints>
      <children>
        <Label text="Topic" GridPane.valignment="BOTTOM">
          <GridPane.margin>
            <Insets bottom="5.0"/>
          </GridPane.margin>
        </Label>
        <TextField fx:id="topic" promptText=".*search.*" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
        <Button mnemonicParsing="false" onMouseClicked="#addTopic" text="Add" GridPane.columnIndex="1"
                GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="TOP">
          <cursor>
            <Cursor fx:constant="HAND"/>
          </cursor>
        </Button>
        <Button mnemonicParsing="false" onMouseClicked="#deleteTopic" styleClass="delete-button" text="Delete"
                GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
          <cursor>
            <Cursor fx:constant="HAND"/>
          </cursor>
        </Button>
        <ListView fx:id="topicList" items="${controller.topics}" prefHeight="457.0" prefWidth="539.0"
                  GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
      </children>

    </GridPane>
  </Tab>
  <Tab text="Log">
    <StackPane onKeyPressed="#handleKeyPress">
      <ListView fx:id="messages" styleClass="messages"/>
      <TextField fx:id="searchField" styleClass="search-field" StackPane.alignment="TOP_CENTER" onKeyReleased="#search" visible="false">
        <StackPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </StackPane.margin>
      </TextField>
    </StackPane>
  </Tab>
  <Tab text="Settings">
    <content>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <children>
          <TextField fx:id="kafkahost" layoutX="14.0" layoutY="40.0" prefHeight="27.0" prefWidth="311.0"
                     text="localhost:9092"/>
          <Label layoutX="15.0" layoutY="18.0" text="Kafka Host"/>
          <CheckBox alignment="CENTER" contentDisplay="TOP" layoutX="16.0" layoutY="116.0" mnemonicParsing="false"
                    nodeOrientation="LEFT_TO_RIGHT" onAction="#toggleFakeData" text="Generate fake data"/>
          <CheckBox layoutX="16.0" layoutY="88.0" mnemonicParsing="false" onAction="#toggleCollectData"
                    text="Record messages"/>
        </children>
      </AnchorPane>
    </content>
  </Tab>
</TabPane>
