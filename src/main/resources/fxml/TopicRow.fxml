<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.control.ListCell" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
  <graphic>
    <GridPane fx:id="row" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
      <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="10000.0" minWidth="10.0"/>
        <ColumnConstraints hgrow="NEVER" prefWidth="70.0" halignment="RIGHT"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <children>
        <Label fx:id="topic"/>
        <Button fx:id="toggle" GridPane.columnIndex="1" mnemonicParsing="false" text="Stop"/>
      </children>
    </GridPane>
  </graphic>
</fx:root>
