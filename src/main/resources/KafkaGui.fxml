<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
         prefWidth="700.0" rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.LogController">
  <tabs>
    <Tab text="Listeners">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="625.0" prefWidth="668.0">
          <children>
            <Label layoutX="14.0" layoutY="14.0" text="Topic"/>
            <TextField fx:id="topic" layoutX="14.0" layoutY="35.0" prefHeight="27.0" prefWidth="476.0"
                       promptText=".*search.*"/>
            <Label layoutX="517.0" layoutY="14.0" text="Is Pattern"/>
            <CheckBox fx:id="isPattern" alignment="CENTER" layoutX="538.0" layoutY="40.0" mnemonicParsing="false"
                      prefHeight="18.0" prefWidth="13.0"/>
            <Button id="add" fx:id="add" layoutX="608.0" layoutY="35.0" mnemonicParsing="false"
                    onMouseClicked="#addTopic" text="Add"/>
            <TableView fx:id="table" editable="true" items="${controller.topics}" layoutX="14.0" layoutY="81.0"
                       prefHeight="460.0" prefWidth="637.0">
              <columns>
                <TableColumn editable="false" prefWidth="441.0" text="Topic">
                  <cellValueFactory>
                    <PropertyValueFactory property="topic"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn editable="false" minWidth="0.0" prefWidth="102.0" text="Is Pattern">
                  <cellValueFactory>
                    <PropertyValueFactory property="isPattern"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn minWidth="0.0" prefWidth="93.0" text="Enabled">
                  <cellValueFactory>
                    <PropertyValueFactory property="enabled"/>
                  </cellValueFactory>
                </TableColumn>
              </columns>
            </TableView>
            <CheckBox fx:id="fake" alignment="CENTER" contentDisplay="TOP" layoutX="505.0" layoutY="559.0"
                      mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" onAction="#toggleFakeData"
                      text="Generate fake data"/>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Log">
      <content>
        <TextArea id="log" fx:id="log" editable="false" prefHeight="200.0" prefWidth="200.0">
          <font>
            <Font name="Menlo Regular" size="14.0"/>
          </font>
        </TextArea>
      </content>
    </Tab>
  </tabs>
</TabPane>
